<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.birulia.apps.dmitrytwitterclient.ProfileActivity">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        tools:context="com.birulia.apps.dmitrytwitterclient.ProfileActivity"
        android:id="@+id/rlHeader">

        <ImageView
            android:id="@+id/ivProfileBackground"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:background="@color/twitter_blue"/>

        <ImageView
            android:id="@+id/ivProfileAvatar"
            android:layout_below="@+id/ivProfileBackground"
            android:layout_marginTop="-30dp"
            android:layout_marginLeft="20dp"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@color/white"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Profile Screen Name"
            android:textColor="@color/black_overlay"
            android:id="@+id/tvProfileName"
            android:layout_below="@+id/ivProfileAvatar"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="\@username"
            android:paddingLeft="10dp"
            android:textColor="@color/black_overlay"
            android:id="@+id/tvUserName"
            android:layout_below="@+id/tvProfileName"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="5dp" />

        <ImageView
            android:id="@+id/ivLocationMarker"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="5dp"
            android:src="@drawable/marker"
            android:layout_below="@id/tvUserName"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Users Location"
            android:layout_marginTop="-2dp"
            android:id="@+id/tvLocation"
            android:textColor="@color/black_overlay"
            android:layout_marginLeft="1dp"
            android:layout_below="@+id/tvUserName"
            android:layout_toRightOf="@+id/ivLocationMarker"
            android:layout_toEndOf="@+id/ivLocationMarker" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:paddingLeft="10dp"
            android:text="111"
            android:textColor="@color/black"
            android:id="@+id/tvFollowersCount"
            android:layout_below="@+id/ivLocationMarker"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="FOLLOWERS"
            android:textColor="@color/black_overlay"
            android:id="@+id/tvFollowersLabel"
            android:layout_below="@+id/ivLocationMarker"
            android:layout_toRightOf="@+id/tvFollowersCount"
            android:layout_toEndOf="@+id/tvFollowersCount"
            android:layout_marginLeft="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="111"
            android:textColor="@color/black"
            android:id="@+id/tvFollowingCount"
            android:layout_below="@+id/ivLocationMarker"
            android:layout_toRightOf="@+id/tvFollowersLabel"
            android:layout_toEndOf="@+id/tvFollowersLabel"
            android:layout_marginLeft="20dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="FOLLOWING"
            android:textColor="@color/black_overlay"
            android:id="@+id/tvFollowingLabel"
            android:layout_below="@+id/ivLocationMarker"
            android:layout_toRightOf="@+id/tvFollowingCount"
            android:layout_toEndOf="@+id/tvFollowingCount"
            android:layout_marginLeft="5dp" />




    </RelativeLayout>
    <FrameLayout
        android:id="@+id/flContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/rlHeader">

    </FrameLayout>

</RelativeLayout>


