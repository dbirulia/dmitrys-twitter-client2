        />
    <item android:id="@+id/compose_tweet"
        android:orderInCategory="5"
        android:title="@string/compose_tweet"
        app:showAsAction="ifRoom"
        android:icon="@drawable/compose2"
        android:onClick="showPostTweetFragment"
        />
    <item android:id="@+id/profile"
        android:orderInCategory="6"
